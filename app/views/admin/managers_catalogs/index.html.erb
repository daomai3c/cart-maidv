<h1>Listing catalogs</h1>

<table width="100%" border="1">
  <tr>
    <th width="90%" style="text-align: left;padding-left: 5px">Name</th>
    <th width="5%"></th>
    <th width="5%"></th>
  </tr>

<% @catalogs.each do |catalog| %>
  <tr>
    <td style="padding: 5px"><%= link_to catalog.name, admin_catalog_path(catalog.id) %></td>
    <td><%= link_to "", edit_admin_catalog_path(catalog) ,class: "icon-edit " %></td>
    <td><%= link_to "", admin_catalog_path(catalog.id), confirm: 'Are you sure?',class: "icon-remove-sign"  ,method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<div class="btn btn-inverse"><%= link_to 'New Catalog', admin_catalogs_new_path %> </div>
