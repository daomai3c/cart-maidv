<% provide(:title,"All users") %>
<h1>All users</h1>
<ul class="users">
  <% @users.each do |user|%>
      <li>
        <%=  gravatar_for user %>
        <%= link_to user.name, user %>
            <% if signed_in? %>
                <% if current_user.admin? && !current_user?(user) %>
                    <div class="btn btn-danger" style="float: right;">
                        <%= link_to " ",user, method: :delete , confirm: "You sure?",class: "icon-remove icon-white" %>
                    </div>
                <% end %>
            <% end %>
      </li>
  <%end%>
</ul>
<%= will_paginate(@users) %>