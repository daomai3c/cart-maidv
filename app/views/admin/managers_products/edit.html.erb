<h1>Edit Product</h1>
<div class="row">
  <div style="margin-left: 20px;">
    <%= form_for(@product , url: admin_product_path) do |f| %>
        <% if @product.errors.any? %>
            <%= render 'shared/error_messages', object: f.object %>
        <% end %>
        <%= f.label :name %>
        <%= f.text_field :name %>
        <%= f.label :catalog %>
        <%= collection_select(:product,:catalog_id,Catalog.all,:id,:name)  %><p></p>
        <%= f.label :price %>
        <%= f.text_field :price %>
        <%= f.label :description %>
        <%= f.text_area :description %>
        <%=  f.submit %>
    <% end %>
  </div>
</div>